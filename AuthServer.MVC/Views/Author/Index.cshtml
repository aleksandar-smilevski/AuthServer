@model List<AuthorDto>

@{
    ViewData["Title"] = "All authors";
}


<h4>All Authors</h4>
<table class="centered striped">
    <thead>
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var author in Model)
    {
        <tr>
            <td>@author.FirstName</td>
            <td>@author.LastName</td>
            <td>
                <a asp-action="Details" asp-route-id="@author.Id">More</a><br />
                <a asp-action="Edit" asp-route-id="@author.Id">Edit</a>
                <form asp-action="Delete" asp-controller="Author" asp-route-id="@author.Id" method="post">
                    <input type="submit" class="btn-flat red-text" value="Delete"/>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>



